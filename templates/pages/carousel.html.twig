<div id="postCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        {% for post in posts %}
        <div class="carousel-item {% if loop.first %}active{% endif %}">
            <img src="{{ asset('divers/image/' ~ post.image) }}" class="img-fluid" style="width:100%; height:800px;"
                alt="{{ post.title }}">

            <div class="carousel-caption d-none d-md-block">
                <h1 style="margin-top:-250px;">{{ post.title }}</h1>
                <h4 style="margin-top:50px;">{{ post.abstract }}</h4>
                <a href="" class="btn btn-danger btn-lg mt-5">Lire +</a>
            </div>

        </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#postCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#postCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>